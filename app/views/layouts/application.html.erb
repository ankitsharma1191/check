<!DOCTYPE html>
<html>
  <head>
    <title>Site</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
<%= link_to 'Myinfotech', root_path, class: "navbar-brand" %>

<ul class="navbar-nav mr-auto navbar-right">
  <li class="nav-item " id="main-nav">
    <%= link_to 'Home', root_path, class: 'nav-link' %>
  </li>
  <li class="nav-item" id="main-nav">
    <%= link_to 'Services', services_index_path, class: 'nav-link' %>
  </li> 
  <li class="nav-item" id="main-nav">
    <%= link_to 'Courses', course_index_path, class: 'nav-link' %>
  </li>
</ul>
</nav>

    <% if current_user %>
  
      <%= link_to 'Dashboard', students_path, class: 'nav-item' %>
  
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
    
    <% else %>
     
         <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
      
     <% end %>


    <%= yield %>


  </body>
</html>
